<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1b73ea</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>





    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>








    <style name="Radians_degrees_selector">
        <item name="android:textColor">#868a8d</item>
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
    </style>
    <style name="Additional_settings_button">
        <item name="android:textColor">#868a8d</item>
        <item name="android:backgroundTint">#FFFFFF</item>
        <item name="android:layout_margin">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Math_expression">
        <item name="android:textSize">70dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginRight">15dp</item>
    </style>
    <style name="Math_result">
        <item name="android:textSize">50dp</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:layout_marginRight">15dp</item>
        <!--        <item name="android:textColor">@color/black</item>-->
    </style>
