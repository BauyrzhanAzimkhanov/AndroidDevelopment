<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="6">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    style="@style/Radians_degrees_selector"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="RAD"/>

                <Button
                    style="@style/Additional_settings_button"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:text="⋮"/>
                    <!--                    style="?android:attr/borderlessButtonStyle"-->

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    style="@style/Math_expression"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="0"/>

                <TextView
                    style="@style/Math_result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="0"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#f1f3f5"
            android:orientation="horizontal"
            android:weightSum="13">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9">

                <Button
                    android:id="@+id/button_7"
                    android:layout_width="82sp"
                    android:layout_height="110sp"
                    android:layout_alignParentStart="true"
                    android:backgroundTint="#f2f3f5"
                    android:text="7"
                    android:textSize="30sp"
                    app:style="@style/Widget.AppCompat.Button.Borderless" />

                <Button
                    android:id="@+id/button_4"
                    android:layout_width="82sp"
                    android:layout_height="110sp"
                    android:layout_weight="1"
                    android:text="4"
                    android:layout_below="@id/button_7"
                    android:backgroundTint="#f2f3f5"
                    android:textSize="30sp"
                    app:style="@style/Widget.AppCompat.Button.Borderless"/>

                <Button
                    android:id="@+id/button_1"
                    android:layout_width="82sp"
                    android:layout_height="110sp"
                    android:layout_below="@id/button_4"
                    android:layout_weight="1"
                    android:backgroundTint="#f2f3f5"
                    android:text="1"
                    android:textSize="30sp"
                    app:style="@style/Widget.AppCompat.Button.Borderless" />

                <Button
                    android:id="@+id/button_0"
                    android:layout_width="82sp"
                    android:layout_height="110sp"
                    android:layout_below="@id/button_1"
                    android:layout_weight="1"
                    android:backgroundTint="#f2f3f5"
                    android:text="0"
                    android:textSize="30sp"
                    app:style="@style/Widget.AppCompat.Button.Borderless" />

                <Button
                    android:id="@+id/button_8"
                    android:layout_width="82sp"
                    android:layout_height="110sp"
                    android:layout_weight="1"
                    android:text="8"
                    android:layout_toRightOf="@id/button_7"
                    android:backgroundTint="#f2f3f5"
                    android:textSize="30sp"
                    app:style="@style/Widget.AppCompat.Button.Borderless"/>

                <Button
                    android:id="@+id/button_5"
                    android:layout_width="82sp"
                    android:layout_height="110sp"
                    android:layout_weight="1"
                    android:text="5"
                    android:layout_below="@id/button_8"
                    android:layout_toRightOf="@id/button_4"
                    android:backgroundTint="#f2f3f5"
                    android:textSize="30sp"
                    app:style="@style/Widget.AppCompat.Button.Borderless"/>

                <Button
                    android:id="@+id/button_2"
                    android:layout_width="82sp"
                    android:layout_height="110sp"
                    android:layout_below="@id/button_5"
                    android:layout_toRightOf="@id/button_1"
                    android:layout_weight="1"
                    android:text="2"
                    android:backgroundTint="#f2f3f5"
                    android:textSize="30sp"
                    app:style="@style/Widget.AppCompat.Button.Borderless" />

                <Button
                    android:id="@+id/button_comma"
                    android:layout_width="82sp"
                    android:layout_height="110sp"
                    android:layout_below="@id/button_2"
                    android:layout_toRightOf="@id/button_0"
                    android:layout_weight="1"
                    android:text=","
                    android:backgroundTint="#f2f3f5"
                    android:textSize="30sp"
                    app:style="@style/Widget.AppCompat.Button.Borderless" />

                <Button
                    android:id="@+id/button_9"
                    android:layout_width="82sp"
                    android:layout_height="110sp"
                    android:layout_weight="1"
                    android:text="9"
                    android:layout_toRightOf="@id/button_8"
                    android:backgroundTint="#f2f3f5"
                    android:textSize="30sp"
                    app:style="@style/Widget.AppCompat.Button.Borderless"/>

                <Button
                    android:id="@+id/button_6"
                    android:layout_width="82sp"
                    android:layout_height="110sp"
                    android:layout_weight="1"
                    android:text="6"
                    android:layout_below="@id/button_9"
                    android:layout_toRightOf="@id/button_5"
                    android:backgroundTint="#f2f3f5"
                    android:textSize="30sp"
                    app:style="@style/Widget.AppCompat.Button.Borderless"/>

                <Button
                    android:id="@+id/button_3"
                    android:layout_width="82sp"
                    android:layout_height="110sp"
                    android:layout_below="@id/button_6"
                    android:layout_toRightOf="@id/button_2"
                    android:layout_weight="1"
                    android:text="3"
                    android:backgroundTint="#f2f3f5"
                    android:textSize="30sp"
                    app:style="@style/Widget.AppCompat.Button.Borderless" />

                <Button
                    android:id="@+id/button_equals"
                    android:layout_width="82sp"
                    android:layout_height="110sp"
                    android:layout_below="@id/button_3"
                    android:layout_toRightOf="@id/button_comma"
                    android:layout_weight="1"
                    android:text="="
                    android:backgroundTint="#f2f3f5"
                    android:textSize="30sp"
                    app:style="@style/Widget.AppCompat.Button.Borderless" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:weightSum="5">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="⌫"
                    android:textColor="#1b73ea"
                    android:backgroundTint="#f2f3f5"
                    android:textSize="30sp"
                    app:style="@style/Widget.AppCompat.Button.Borderless"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="÷"
                    android:textColor="#1b73ea"
                    android:backgroundTint="#f2f3f5"
                    android:textSize="30sp"
                    app:style="@style/Widget.AppCompat.Button.Borderless"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="×"
                    android:textColor="#1b73ea"
                    android:backgroundTint="#f2f3f5"
                    android:textSize="30sp"
                    app:style="@style/Widget.AppCompat.Button.Borderless"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="-"
                    android:textColor="#1b73ea"
                    android:backgroundTint="#f2f3f5"
                    android:textSize="40sp"
                    app:style="@style/Widget.AppCompat.Button.Borderless"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="+"
                    android:textColor="#1b73ea"
                    android:backgroundTint="#f2f3f5"
                    android:textSize="30sp"
                    app:style="@style/Widget.AppCompat.Button.Borderless"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    style="@style/Slider_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="ᑉ"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>