<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="vertical"
            android:weightSum="6">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/radians"
                    android:textColor="#868a8d" />

                <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="35dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:text="@string/tree_dots"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                    <!--                    style="?android:attr/borderlessButtonStyle"-->

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5"
                android:orientation="vertical"
                android:weightSum="2">

                <TextView
                    android:id="@+id/currentExpressionText"
                    style="@style/Math_expression"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text=""/>

                <TextView
                    android:id="@+id/resultExpressionText"
                    style="@style/Math_result"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/zero"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:background="#f1f3f5"
            android:orientation="horizontal"
            android:weightSum="13">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="9">

                <Button
                    android:id="@+id/button_7"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="90dp"
                    android:layout_height="122dp"
                    android:layout_alignParentStart="true"
                    android:text="@string/seven"
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/button_4"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="90dp"
                    android:layout_height="122dp"
                    android:layout_below="@id/button_7"
                    android:text="@string/four"
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/button_1"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="90dp"
                    android:layout_height="122dp"
                    android:layout_below="@id/button_4"
                    android:text="@string/one"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button_0"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="90dp"
                    android:layout_height="122dp"
                    android:layout_below="@id/button_1"
                    android:text="@string/zero"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/button_8"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="90dp"
                    android:layout_height="122dp"
                    android:layout_toEndOf="@id/button_7"
                    android:text="@string/eight"
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/button_5"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="90dp"
                    android:layout_height="122dp"
                    android:layout_below="@id/button_8"
                    android:layout_toEndOf="@id/button_4"
                    android:text="@string/five"
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/button_2"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="90dp"
                    android:layout_height="122dp"
                    android:layout_below="@id/button_5"
                    android:layout_toEndOf="@id/button_1"
                    android:text="@string/two"
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/button_dot"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="90dp"
                    android:layout_height="122dp"
                    android:layout_below="@id/button_2"
                    android:layout_toEndOf="@id/button_0"
                    android:text="@string/dot"
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/button_9"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="90dp"
                    android:layout_height="122dp"
                    android:layout_toEndOf="@id/button_8"
                    android:text="@string/nine"
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/button_6"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="90dp"
                    android:layout_height="122dp"
                    android:layout_below="@id/button_9"
                    android:layout_toEndOf="@id/button_5"
                    android:text="@string/six"
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/button_3"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="90dp"
                    android:layout_height="122dp"
                    android:layout_below="@id/button_6"
                    android:layout_toEndOf="@id/button_2"
                    android:text="@string/three"
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/button_equals"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="90dp"
                    android:layout_height="122dp"
                    android:layout_below="@id/button_3"
                    android:layout_toEndOf="@id/button_dot"
                    android:text="@string/equals"
                    android:textSize="30sp" />

            </RelativeLayout>

            <View android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:backgroundTint="#e7eaeb"
                android:background="@color/black"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="vertical"
                android:weightSum="5">

                <Button
                    android:id="@+id/button_erase"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/backspace"
                    android:textColor="#1b73ea"
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/button_divide"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/division"
                    android:textColor="#1b73ea"
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/button_multiply"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/multiplication"
                    android:textColor="#1b73ea"
                    android:textSize="30sp"/>

                <Button
                    android:id="@+id/button_subtract"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/minus"
                    android:textColor="#1b73ea"
                    android:textSize="40sp"/>

                <Button
                    android:id="@+id/button_sum"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/plus"
                    android:textColor="#1b73ea"
                    android:textSize="30sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <Button
                    style="@style/Slider_style"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/left_arrow"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>